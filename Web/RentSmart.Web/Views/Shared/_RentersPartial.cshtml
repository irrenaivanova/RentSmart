@using RentSmart.Web.ViewModels.Properties.ViewModels.AllByUser
@model List<RenterPropertyInListViewModel>

<h5 class="text-center">Rented Properties</h5>
<hr />

<div class="container row mb-6">
@foreach (var property in Model)
{
        var current = property.IsCurrentRental ? "Current Rental" : "Passed Rental";
    <ul class="list-group col-md-4 mb-3 mt-4">
        <li class="list-group-item bg-primary text-light">Property</li>
            <li class="list-group-item"><i class="fa-solid fa-house"></i>  @property.PropertyTypeName</li>
            <li class="list-group-item"><i class="fa-solid fa-location-dot"></i> @property.CityName, @property.DistrictName</li>
            <li class="list-group-item"><i class="fa-solid fa-up-right-and-down-left-from-center"></i>  @property.Size sq.m, @property.Floor floor</li>
            <li class="list-group-item @(property.IsCurrentRental ? "text-success" : "text-danger")"><i class="fa-solid fa-check"></i> Status: @current</li>

            <li class="list-group-item">
                <a type="button" class="btn btn-primary btn-sm" asp-controller="Rate" asp-action="Make" asp-route-id="">Rate the property</a>
            </li>         
    </ul>
}
</div>
