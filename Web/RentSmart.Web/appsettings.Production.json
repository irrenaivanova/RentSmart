{
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:rentsmart-server.database.windows.net,1433;Database=rentsmart-database;User ID=rentsmart-admin;Password=YourPassword;Encrypt=true;TrustServerCertificate=true;Connection Timeout=30;"
  },
  "Authentication": {
    "Facebook": {
      "AppId": "${FACEBOOK_APP_ID}",
      "AppSecret": "${FACEBOOK_APP_SECRET}"
    },
    "Google": {
      "ClientId": "${GOOGLE_CLIENT_ID}",
      "ClientSecret": "${GOOGLE_CLIENT_SECRET}"
    }
  },
  "GoogleReCaptcha": {
    "Key": "${GOOGLE_RECAPTCHA_KEY}",
    "Secret": "${GOOGLE_RECAPTCHA_SECRET}"
  },
  "SendGrid": {
    "ApiKey": "${SENDGRID_API_KEY}"
  },
  "AllowedHosts": "*"
}
